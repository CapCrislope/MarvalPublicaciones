
@{ string identif = "_ModalAgregarSocio";}

<div id="AlertsModal"></div>

<div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Agregar Socio</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <form id="FormAgregarSocio" onsubmit="AgregarSocio(); return false;">
                <input type="hidden" id="hSocio@{@identif}" name="Socio" />
                <div class="row">

                    <div class="form-group-sm col-md-12">
                        <label for="ddlSocio@{@identif}">Usuario</label>
                        <div id="pnlSocio@{@identif}">
                            <select class="demo-default" id="ddlSocio@{@identif}" name="ddlUsuario@{@identif}" placeholder="Buscar..."></select>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="form-group-sm col-md-12 mt-4">
                        El sistema detecta automáticamente cuando una persona egresó de Marval para considerarla como ExSocio, marcando el siguiente check 
                        puede forzar para que el sistema considere a un ExSocio o Consultor como Socio en caso de requerirlo para la carga de un ejercicio.
                        <div class="mt-3">
                            <input type="checkbox" id="chkForzarSocio" name="chkForzarSocio" value=""> Forzar Socio
                        </div>
                    </div>
                </div>

                <div class="modal-footer mt-3">
                    <button type="button" class="btn btn-light btn-sm" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary btn-sm">Agregar</button>
                </div>
            </form>

        </div>

    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        ComboSocio();

    })

</script>