@model BackendPortal.Models.VM.CVExperienciaVM

<div class="modal-body">
    <div class="form-group">
        <div>
            <button type="button" class="btn btn-default btn-sm desplegable" onclick="SlideDesplegable('panelFormExperiencia');">
                Experiencia&nbsp;<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
            </button>
        </div>
        <div id="panelFormExperiencia" style="margin-top:20px; display:none;" class="panel panel-default">
            <div class="panel-body">
                <form id="ExperienciaForm" onsubmit="GuardarExperiencia(); return false;">
                    @Html.HiddenFor(model => model.experiencia.id)
                    @Html.HiddenFor(model => model.experiencia.cv_id)
                    @Html.HiddenFor(model => model.modo)
                    <div class="row">
                        <div class="col-md-4">
                            <label>Empresa *</label>
                            @Html.EditorFor(model => model.experiencia.company, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.experiencia.company)
                        </div>
                        <div class="col-md-4">
                            <label>Cargo</label>
                            @Html.EditorFor(model => model.experiencia.charge, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                        <div class="col-md-4">
                            <label>Ubicación</label>
                            @Html.EditorFor(model => model.experiencia.location, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;">
                        <div class="col-md-8">
                            <label>Descripción</label>
                            @Html.TextAreaFor(model => model.experiencia.description, new { @class = "ckeditor form-control wmax input-sm", @Style = "height: 100px" })
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Fecha</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="input-group date">
                                        @Html.EditorFor(model => model.experiencia.date_from, new { htmlAttributes = new { @class = "form-control input-sm", @readonly = "readonly", placeholder = "Inicio" } })
                                        <div class="input-group-addon input-sm dtp-sm">
                                            <span id="datepicker" class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2" style="text-align:center; margin-top:5px;"><label>&mdash;</label></div>
                                <div class="col-md-5">
                                    <div class="input-group date">
                                        @Html.EditorFor(model => model.experiencia.date_to, new { htmlAttributes = new { @class = "form-control input-sm", @readonly = "readonly", placeholder = "Fin" } })
                                        <div class="input-group-addon input-sm dtp-sm">
                                            <span id="datepicker" class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                                <div style="margin-left:15px; margin-top:30px;">
                                    @Html.ValidationMessageFor(model => model.experiencia.date_from)
                                </div>
                            </div>
                            <div class="row der" style="margin-top:35px; margin-right:0px;">
                                <button type="button" class="btn btn-default hidden" id="btnCancelarEdicion" onclick="LimpiarFormExperiencia()">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12">
                <table id="TablaExperiencia" class="display compact">
                    <thead>
                        <tr>
                            <th>Período</th>
                            <th>Empresa</th>
                            <th>Cargo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        $("#TituloModal").text("Experiencia");
        InicializarDatePickers();
        IniciarTablaExperiencia();
    });
</script>
