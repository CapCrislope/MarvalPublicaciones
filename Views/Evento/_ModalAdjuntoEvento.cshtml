@model BackendPortal.Models.DTO.AdjuntoEventoDTO
@{ string identif = "Modal"; }

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <form id="FormVideoEvento" onsubmit="return false;" >
            @Html.HiddenFor(model => model.IdEdicionEvento)
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Adjunto Evento</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <span class="btn btn-primary fileinput-button">
                                <i class="glyphicon glyphicon-plus"></i>
                                <span>Agregar Archivo...</span>
                                <input id="fileupload" type="file" name="files[]" accept="video/*" />
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="pnlFile" style="display:none">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="file_name"></div>(<div class="file_size" style="display:inline"></div>)
                                    </div>
                                    <div class="col-md-4">
                                        <div class="progress progress-striped" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0" style="height: 34px">
                                            <div class="progress-bar" style="width: 0%;">
                                                <span class="progressText" style="display:block; margin-top: 9px"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="botonera" class="col-md-4" style="text-align: right"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="ContentAdjuntos">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </form>
    </div>
</div>

<input type="hidden" id="IdDelete" />
<div id="AlertsModal">
</div>

@Scripts.Render("~/bundles/jqueryval")


<script>
    $(document).ready(function () {

        InicializarFileUpload();

    });
</script>