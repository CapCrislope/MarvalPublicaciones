
@model DistribucionUtilidades.Models.Q.QEdicionImpuestosBorrador


@{ string identif = "_ModalEdicionImpuestosBorrador";}

<div id="AlertsModal"></div>

<div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Editar Impuestos - Socio @Model.IdSocio</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <form id="FormEdicionImpuestosRetenciones" onsubmit="GuardarEdicionImpuestos(); return false;">
            <div class="modal-body">

                @Html.HiddenFor(model => model.IdSocio)
                @Html.HiddenFor(model => model.Type)

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Anticipos Bienes Personales</label>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.EditorFor(model => Model.ImporteBienesPersonales, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteBienesPersonales)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Saldo DDJJ Bienes Personales</label>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.EditorFor(model => Model.ImporteSaldoDDJJBienes, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteSaldoDDJJBienes)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Anticipos impuesto ganancias</label>
                    </div>
                    <div class="col-md-6">

                        <div>
                            @Html.EditorFor(model => Model.ImporteGanancias, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteGanancias)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Saldo DDJJ Ganancias</label>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.EditorFor(model => Model.ImporteSaldoDDJJGanancias, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteSaldoDDJJGanancias)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Impuesto Cedular</label>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.EditorFor(model => Model.ImporteImpuestoCedular, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteImpuestoCedular)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Saldo DDJJ Impuesto Cedular</label>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.EditorFor(model => Model.ImporteSaldoDDJJCedular, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "number", @min = "0", @pattern = "[0-9]*", @data_politespace = "", @data_politespace_prefix = "$ ", @data_politespace_reverse = "" } })
                            @Html.ValidationMessageFor(model => Model.ImporteSaldoDDJJCedular)
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer mt-3">
                <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                <button type="button" class="btn btn-light btn-sm" data-dismiss="modal">Cerrar</button>
            </div>
        </form>

    </div>
</div>


<partial name="_ValidationScriptsPartial" />


<script type="text/javascript">

    $(document).ready(function () {

        $("input[data-politespace]").politespace();

    })

</script>